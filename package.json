{
  "name": "release-me",
  "version": "1.1.2",
  "description": "Replacement for `npm version` with automatic CHANGELOG generation",
  "bin": "bin/cli.js",
  "scripts": {
    "release": "release-me",
    "report-coverage": "nyc report --reporter=text-lcov | codecov",
    "test": "nyc --reporter=html --reporter=text mocha --timeout 20000 --reporter spec $(find . -name '*test.js' ! -ipath '*node_modules*')",
    "test:check-coverage": "nyc check-coverage --statements 90 --branches 70 --functions 97 --lines 90",
    "test:debug": "DEBUG=mocha npm t",
    "test:watch": "npm t -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/design4pro/release-me.git"
  },
  "engines": {
    "node": ">=4.0"
  },
  "keywords": [
    "changelog",
    "automatic",
    "version",
    "release"
  ],
  "author": {
    "name": "Rafa≈Ç Wolak",
    "email": "r.wolak@design4.pro",
    "url": "https://www.design4.pro"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/design4pro/release-me/issues/"
  },
  "homepage": "https://github.com/design4pro/release-me#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "conventional-changelog": "^1.1.0",
    "conventional-changelog-release-me": "^1.0.1",
    "conventional-recommended-bump": "^1.0.0",
    "figures": "^2.0.0",
    "fs-access": "^1.0.0",
    "q": "^1.5.0",
    "semver": "^5.1.0",
    "yargs": "^8.0.1"
  },
  "devDependencies": {
    "chai": "^4.0.0",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "cz-release-me": "^1.1.0",
    "debug": "^2.6.8",
    "git-dummy-commit": "^1.3.0",
    "istanbul": "^0.4.5",
    "jscs": "^3.0.7",
    "jshint": "^2.9.4",
    "mocha": "^3.4.2",
    "mock-git": "1.0.3",
    "nyc": "^11.0.2",
    "rimraf": "^2.6.1",
    "shelljs": "^0.7.3",
    "standard": "^10.0.0",
    "winston": "^2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-release-me"
    }
  }
}
