{
  "name": "release-me",
  "version": "0.3.0",
  "description": "Replacement for `npm version` with automatic CHANGELOG generation",
  "bin": "dist/cli.js",
  "scripts": {
    "build": "babel --copy-files --out-dir dist src",
    "check-coverage": "nyc check-coverage --statements 93 --branches 80 --functions 95 --lines 95",
    "commit": "git-cz",
    "cover": "nyc --reporter=lcov npm t",
    "lint": "jshint *.js --exclude node_modules && jscs *.js",
    "prebuild": "rimraf dist",
    "release": "./dist/cli.js",
    "release:github": "conventional-github-releaser -p angular -r 0",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "start": "npm run test",
    "test": "mocha --timeout 15000 test/index.js --compilers js:babel-register",
    "test:debug": "DEBUG=mocha npm t",
    "validate": "npm run cover && npm run check-coverage",
    "watch:test": "npm t -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/design4pro/changelog.git"
  },
  "engines": {
    "node": ">=4.0"
  },
  "keywords": [
    "changelog",
    "automatic",
    "version"
  ],
  "author": {
    "name": "Rafa≈Ç Wolak",
    "email": "r.wolak@design4.pro",
    "url": "https://www.design4.pro"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/design4pro/changelog/issues"
  },
  "homepage": "https://github.com/design4pro/changelog#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "conventional-changelog": "^1.1.0",
    "conventional-changelog-release-me": "^1.0.1",
    "conventional-recommended-bump": "^1.0.0",
    "figures": "^1.5.0",
    "fs-access": "^1.0.0",
    "object-assign": "^4.1.0",
    "semver": "^5.1.0",
    "yargs": "^7.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "bluebird": "^3.4.6",
    "chai": "^4.0.0",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "debug": "^2.6.8",
    "git-dummy-commit": "^1.3.0",
    "husky": "^0.13.4",
    "istanbul": "^0.4.5",
    "jscs": "^3.0.7",
    "jshint": "^2.9.4",
    "mocha": "^3.4.2",
    "mocha-logger": "^1.0.5",
    "mock-git": "^1.0.2",
    "mockery": "^2.0.0",
    "nyc": "^10.3.2",
    "rimraf": "^2.6.1",
    "shelljs": "^0.7.3",
    "standard": "^10.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}
